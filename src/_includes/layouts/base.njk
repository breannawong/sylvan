<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# -----------------------
     SEO TITLE
     ----------------------- #}
    {% if page.url == "/" %}
      {% set pageTitle = seo.title or "Sylvan Wedding Films | Wedding Videographer in Pittsburgh" %}
    {% elif page.url == "/inquire/" %}
      {% set pageTitle = seo.title or "Inquire | Sylvan Wedding Films" %}
    {% else %}
      {% set pageTitle = seo.title or title %}
    {% endif %}

    <title>{{ pageTitle }}</title>

    {# -----------------------
       META DESCRIPTION
       ----------------------- #}
    {% if seo.description %}
      <meta name="description" content="{{ seo.description }}">
    {% endif %}

    {# -----------------------
       OG TAGS
       ----------------------- #}
    {% if seo.og_title %}
      <meta property="og:title" content="{{ seo.og_title }}">
    {% else %}
      <meta property="og:title" content="{{ pageTitle }}">
    {% endif %}

    {% if seo.og_description %}
      <meta property="og:description" content="{{ seo.og_description }}">
    {% elif seo.description %}
      <meta property="og:description" content="{{ seo.description }}">
    {% endif %}

    {% if seo.og_image %}
      <meta property="og:image" content="{{ seo.og_image }}">
    {% endif %}

    {# -----------------------
       OPTIONAL: Twitter card
       ----------------------- #}
    <meta name="twitter:card" content="summary_large_image">
    {% if seo.og_title %}
      <meta name="twitter:title" content="{{ seo.og_title }}">
    {% else %}
      <meta name="twitter:title" content="{{ pageTitle }}">
    {% endif %}
    {% if seo.og_description %}
      <meta name="twitter:description" content="{{ seo.og_description }}">
    {% elif seo.description %}
      <meta name="twitter:description" content="{{ seo.description }}">
    {% endif %}
    {% if seo.og_image %}
      <meta name="twitter:image" content="{{ seo.og_image }}">
    {% endif %}

    {% if description %}
      <meta name="description" content="{{description}}"/>
    {% endif %}
    {% block head %}{% endblock %}
    <!-- Required for modern browsers -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <!-- Fallback -->
    <link rel="icon" href="/favicon.ico">
    <!-- iOS -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300..700;1,300..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/static/css/style.css"/>
    {% if prism == true %}
      <link rel="stylesheet" type="text/css" href="/static/css/prism-tomorrow.css">
    {% endif %}
  </head>
  <body>
    {% include "components/header.njk" %}

    <main>
      {% block content %}{% endblock %}
    </main>

    {% from "components/footer.njk" import footer %}

    {{ footer(collections.footer[0].data) }}

    <script src="/static/js/alpine.js"></script>

    {% if path == "home" %}
      <!-- Netlify Identity Widget -->
      <!-- Needed only if you are using Netlify Identity feature -->
      <script type="text/javascript" src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    {% endif %}

  </body>
</html>